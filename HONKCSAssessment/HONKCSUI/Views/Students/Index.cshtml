@model IEnumerable<KCSEntities.DAL.studentprofile>
@{
    ViewBag.Title = "Students List";
}

<h2>Students List</h2>
<div class=".container-fluid">

    <div class="row">
        <div class="col-md-12">
            No of students - <b>
                @if (Model != null)
                {@Model.Count().ToString();
            }
            </b>
        </div>
    </div>
    <div class="row top-buffer"></div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover" id="studentrecords">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>DoB</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="" style="text-align:left">@item.FirstName</td>
                        <td class="" style="text-align:left">@item.LastName</td>
                        <td class="" style="text-align:left">@item.DoB</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.iD }) |
                            @Html.ActionLink("Details", "Details", new { id = item.iD }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.iD })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
<script>
    $(document).ready(function ()
{
        $('#studentrecords').DataTable();

});
</script>